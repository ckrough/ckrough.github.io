---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Card from '../components/Card.astro';
---

<BaseLayout
  title="Services - Chris Krough"
  description="AI transformation, platform engineering, M&A technical due diligence, and engineering leadership. Advisory, project-based, and fractional engagements."
>
  <!-- Hero Section -->
  <Hero
    headline="Services"
    subheadline="Strategic technical expertise for organizations building with AI and scaling platforms."
  />

  <!-- Core Services -->
  <section class="section-spacing">
    <div class="container-custom">
      <div class="grid gap-8 max-w-4xl mx-auto">
        <!-- AI Transformation -->
        <ServiceCard
          title="AI Transformation & Implementation"
          description="Most organizations struggle to figure out where AI adds value. I help identify high-impact opportunities, build proof-of-concepts quickly, and help your team scale what works into production."
          items={[
            'Discovery & Assessment - Identify where AI can drive real business value',
            'Proof of Concept / Prototyping - Fast prototyping of AI approaches',
            'Implementation Partnership - Build production RAG systems, document processing, intelligent automation',
            'LLM Evaluation Frameworks - Ensure AI systems are effective before and after deployment'
          ]}
        />

        <!-- Platform Engineering -->
        <ServiceCard
          title="Platform Engineering"
          description="Led engineering teams through major transitions. I design systems that scale with your organization whether you're handling rapid growth, M&A integration, or modernization."
          items={[
            'Architecture design for scale - Multi-tenant SaaS, microservices, cloud infrastructure',
            'Cloud migration & transformation - AWS, GCP, Azure modernization strategies',
            'Kubernetes & container platforms - Production-grade orchestration and reliability',
            'Platform consolidation - Post-acquisition integration and rationalization'
          ]}
        />

        <!-- M&A Due Diligence -->
        <ServiceCard
          title="M&A Technical Due Diligence"
          description="Independent technical assessment for acquisitions. I evaluate infrastructure, architecture, team capability, and technical debt to inform investment decisions."
          items={[
            'Platform assessment - Scalability, reliability, technical debt evaluation',
            'Integration planning - Merger complexity analysis and roadmap development',
            'Team evaluation - Engineering organization maturity and capability',
            'Risk identification - Technical and operational risk assessment'
          ]}
        >
          <p class="text-sm text-muted italic mt-4">
            Supported $3B+ in transactions across real estate technology, SaaS platforms,
            and data infrastructure. 
          </p>
        </ServiceCard>

        <!-- Engineering Leadership -->
        <ServiceCard
          title="Engineering Leadership"
          description="Fractional Engineering Leadership and advisory services for startups through growth-stage companies. I help build teams, establish processes, and set technical strategy."
          items={[
            'Fractional/advisory roles - Strategic technical leadership without full-time overhead',
            'Team building through growth - Hiring, organization design, engineering culture',
            'Technical strategy - Roadmap planning, architecture decisions, build vs buy',
            'Process optimization - Development workflows, incident response, on-call practices'
          ]}
        />
      </div>
    </div>
  </section>

  <!-- Engagement Models -->
  <section class="section-spacing bg-surface">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-h2 font-heading font-bold text-structure mb-8 text-center">
          Engagement Models
        </h2>

        <div class="grid md:grid-cols-3 gap-6">
          <Card variant="bordered">
            <h3 class="text-h4 font-heading font-bold text-structure mb-3">
              Advisory
            </h3>
            <p class="text-base text-muted">
              Strategic guidance on specific technical decisions, architecture reviews,
              technical due diligence
            </p>
          </Card>

          <Card variant="bordered">
            <h3 class="text-h4 font-heading font-bold text-structure mb-3">
              Project-Based
            </h3>
            <p class="text-base text-muted">
              Defined scope engagements: AI proof-of-concept, platform assessment, M&A
              integration planning
            </p>
          </Card>

          <Card variant="bordered">
            <h3 class="text-h4 font-heading font-bold text-structure mb-3">
              Fractional
            </h3>
            <p class="text-base text-muted">
              Ongoing technical leadership: fractional CTO/VP Engineering, embedded
              architect, platform lead
            </p>
          </Card>
        </div>

        <div class="mt-12 text-center">
          <a href="/contact" class="btn-primary">
            Get in Touch
          </a>
          <a
            href="https://faberworks.io"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block ml-4 text-structure font-medium hover:text-accent transition-colors"
          >
            Learn More at Faberworks â†’
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
