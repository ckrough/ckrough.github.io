---
interface Props {
  class?: string;
  variant?: 'default' | 'elevated' | 'bordered';
}

const { class: className = '', variant = 'default' } = Astro.props;

const variantClasses = {
  default: 'bg-surface shadow-card',
  elevated: 'bg-surface shadow-card hover:shadow-card-hover transition-shadow duration-200',
  bordered: 'bg-surface border border-border',
};
---

<div class={`rounded-lg p-6 ${variantClasses[variant]} ${className}`}>
  <slot />
</div>
