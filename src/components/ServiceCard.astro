---
import Card from './Card.astro';

interface Props {
  title: string;
  description: string;
  items?: string[];
}

const { title, description, items = [] } = Astro.props;
---

<Card variant="elevated">
  <div class="flex flex-col gap-4">
    <h3 class="text-h3 font-heading font-bold text-structure">
      {title}
    </h3>

    <p class="text-base text-structure leading-relaxed">
      {description}
    </p>

    {items.length > 0 && (
      <ul class="space-y-2">
        {items.map((item) => (
          <li class="text-base text-muted flex items-start">
            <span class="text-accent mr-2 flex-shrink-0">â€¢</span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    )}

    <slot />
  </div>
</Card>
